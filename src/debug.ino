void setupDebug()
{
  while ((!debugSerial) && (millis() < 10000)); //Wait for debugSerial or 10 seconds
  debugSerial.begin(9600);

}
/****************************************************************************
  ...
*****************************************************************************/
void logMsg(String msg)
{
#ifdef DEBUG
  debugSerial.println(msg);
#endif
}

/****************************************************************************
  ...
*****************************************************************************/
void logMsgNoLn(String msg)
{
#ifdef DEBUG
  debugSerial.print(msg);
#endif
}

